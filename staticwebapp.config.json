{
  "routes": [
    {
      "route": "/api/*",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/.auth/login/aad",
      "statusCode": 404
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/api/*", "/.auth/*"]
  },
  "auth": {
    "identityProviders": {
      "azureActiveDirectory": {
        "registration": {
          "openIdIssuer": "https://quickpxe.b2clogin.com/quickpxe.onmicrosoft.com/v2.0/.well-known/openid-configuration?p=B2C_1_signupsignin",
          "clientIdSettingName": "AZURE_CLIENT_ID",
          "clientSecretSettingName": "AZURE_CLIENT_SECRET"
        }
      }
    }
  },
  "globalHeaders": {
    "Cache-Control": "public, max-age=3600"
  },
  "responseOverrides": {
    "401": {
      "statusCode": 401,
      "body": "Unauthorized"
    }
  }
}
